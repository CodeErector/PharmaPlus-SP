</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].MedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].MedDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].MedType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Potency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Expiry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Medicine) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Potency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expiry)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MedId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MedId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MedId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
